@model IEnumerable<LoginModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Students List</h1>
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2> Students </h2>
        </div>
        <div class="col-6">
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:auto">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                User Email
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Email ?? "N/A")</td>
                <td>
                    <div class="col-6">
                        <form method="post" asp-action="Delete" asp-route-id="@item.UserId">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">Delete User</button>
                        </form>

                    </div>
                </td>
                <td>
                    <div class="col-6">
                        <a class="btn btn-primary" asp-action="ShowMore" asp-route-id="@item.UserId">Show More</a>


                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
