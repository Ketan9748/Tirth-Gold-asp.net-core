<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tirth_Gold</title>

  

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tirth_Gold.styles.css" asp-append-version="true" />

    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>

    

</head>
<body class="accordion-body align-content-center ">
    <div class="card">
    <header>


        <nav class="navbar navbar-expand-lg bg-body-tertiary" style="background-color:#B47D2A;">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <img src="~/images/logo.png" alt="logo" style="height:50px; width:70px;" />

                    <form class="d-flex mx-5" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    </form>

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0  mx-auto">
                        <li class="nav-item ">
                            <a class="nav-link active text-white" aria-current="page" asp-action="HomePage" asp-controller="Ecommerce">Home</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-action="About" asp-controller="Ecommerce">About</a>
                        </li>
                        <li class="nav-item ">
                            <a  class="nav-link text-white" asp-action="MenCollection" asp-controller="Ecommerce">Men</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-action="WomenCollection" asp-controller="Ecommerce">Women</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-action="ContactUs" asp-controller="Ecommerce">Contact Us</a>
                        </li>
                     </ul>

                     <div class="d-flex">


                            <div class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" style="color:black;">Login</a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-action="Login" asp-controller="Ecommerce" >Login</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-action="Register" asp-controller="Ecommerce">Register</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-action="UserProfile" asp-controller="Ecommerce">Your Profile</a>
                                    </li>
                                </ul>
                            </div>

@*                         <a type="submit" class="btn" asp-action="Login" asp-controller="Ecommerce" style="background-color:#B47D2A; ">Login</a>
 *@
@* 
                        <a asp-action="UserProfile" asp-controller="Ecommerce" style="color:black;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                            </svg>
                        </a>
 *@                            
                        <a asp-action="Index" asp-controller="Cart" style="color:black;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-cart ms-4 me-4" viewBox="0 0 16 16" >
                                <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l1.313 7h8.17l1.313-7zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                            </svg>
                        </a>

                    </div>
                   
                </div>
            </div>
        </nav>




    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>











       


       







    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Tirth_Gold - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>




